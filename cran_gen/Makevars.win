PKG_CPPFLAGS=-Iexternal -Iexternal/lpsolve/headers/run_headers -Iexternal/minimum_ellipsoid -Iinclude 
PKG_CXXFLAGS= -lm -ldl -DBOOST_NO_AUTO_PTR
CXX_STD = CXX11

PKG_LIBS=-Lexternal/lpsolve/build/lp_solve -llp_solve $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)

$(SHLIB): external/lpsolve/build/lp_solve/liblp_solve.a

external/lpsolve/build/lp_solve/liblp_solve.a:
	@(cd external/lpsolve/build/lp_solve && $(MAKE) liblp_solve.a \
    CC="$(CC)" CPPFLAGS="$(CPPFLAGS) -DUSRDLL -DINLINE=static" \
    CFLAGS="$(CFLAGS)" CPICFLAGS="$(CPICFLAGS)" AR="$(AR)" \
    RANLIB="$(RANLIB)")
