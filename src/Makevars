PKG_CPPFLAGS=-Iexternal/LPsolve_src/include -Iexternal/LPsolve_src -Iexternal/minimum_ellipsoid -Iinclude -Iinclude/volume -Iinclude/polytope_generators -Iinclude/samplers 
PKG_CXXFLAGS=-O3 -lm -ldl -Wno-ignored-attributes -DBOOST_NO_AUTO_PTR
CXX_STD = CXX11

PKG_LIBS=-Llp_solve -llp_solve $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)

$(SHLIB): lp_solve/liblp_solve.a

lp_solve/liblp_solve.a:
	@(cd lp_solve && $(MAKE) liblp_solve.a \
    CC="$(CC)" CPPFLAGS="$(CPPFLAGS)" CFLAGS="$(CFLAGS)" \
    CPICFLAGS="$(CPICFLAGS)" AR="$(AR)" RANLIB="$(RANLIB)")
